template(name='new_review')
  h3  Add a Review For
    strong=name
  form(class='new-review')
    div(class='form-group')
      label  Rating
      select(class='form-control' name='rating')
        option(value='1')  1
        option(value='2')  2
        option(value='3')  3
        option(value='4')  4
        option(value='5')  5
    div(class='form-group')
      label  Review
      textarea(class='form-control' name='body')

    div
      input(type='submit' class='btn btn-success' value='Submit Review')
      a(href='/' class='btn btn-default')  Close

